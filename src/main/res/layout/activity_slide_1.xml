<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Slide_1"
    android:background="#ff0000" >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/background_brickz">

        <TextView
            android:id="@+id/tvs1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_lego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_below="@id/tvs1"
            android:padding="10dp"
            android:text="LEGO STORE"
            android:textColor = "#ffffff"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/tv_lego" >

            <Button
                android:id="@+id/btnSlideMenu"
                android:onClick="onClickSldM"
                android:layout_weight="0.33"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/PopUpMenu"
                android:textColor = "#ffffff"
                android:background="#000000"
                android:padding="10dp"
                android:text="SLIDE MENU"
                android:textStyle="bold" />




            <Button
                android:id="@+id/btnRpt"
                android:onClick="onClickRepeat"
                android:layout_weight="0.33"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Repeat"
                android:textColor = "#ffffff"
                android:background="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinLay"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />





        <LinearLayout
            android:id="@+id/LinLay_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/tv_wit"
            android:layout_marginTop="50dp" >



            <Button
                android:id="@+id/btnLast"
                android:onClick="onClickLast"
                android:layout_weight="0.1"
                android:layout_width= "0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="@drawable/arrow_left" />

            <ImageView
                android:id="@+id/image1"
                android:onClick = "onClickImg"
                android:layout_weight="0.5"
                android:layout_width= "0dp"
                android:foregroundGravity="center"
                android:layout_height="200dp"
                android:padding="10dp"
                android:background="@drawable/lego_a3best" />


            <Button
                android:id="@+id/btnNext"
                android:onClick="onClickNext"
                android:layout_weight="0.1"
                android:layout_width= "0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="@drawable/arrow_right" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/RelLayContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/LinLay_2" >


            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="26sp"
                android:textStyle="bold"
                android:text="Lego White House"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />


            <TextView
                android:id="@+id/tvContent_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tv1"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="price: 460pln"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tvContent_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/tvContent_1"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="quantity: 1483 bricks"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/tvContent_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/tvContent_2"
                android:textColor="#ffffff"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="age: 18+"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp" />

         </RelativeLayout>
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>