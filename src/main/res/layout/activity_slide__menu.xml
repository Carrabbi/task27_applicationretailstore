<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Slide_Menu"
    android:background="#ff0000">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:background="@drawable/background_brickz">

        <TextView
            android:id="@+id/tvs1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:padding="5dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tv_lego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:layout_below="@id/tvs1"
            android:padding="10dp"
            android:text="LEGO STORE"
            android:textColor="#e5ff00"
            android:textSize="26sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LinLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/tv_lego" >



            <Button
                android:id="@+id/btnBack"
                android:onClick="onClickBack"
                android:layout_weight="0.5"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="BACK"
                android:textStyle="bold"
                android:textColor = "#e5ff00"
                android:background="#000000" />

>

            <Button
                android:id="@+id/btnRpt"
                android:onClick="onClickRepeat"
                android:layout_weight="0.5"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Repeat"
                android:textColor = "#e5ff00"
                android:background="#000000" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinLay"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:id = "@+id/LinLayLego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_wit"
            android:orientation="vertical"
            android:layoutAnimation="@anim/layout_1" >

                <ImageView
                    android:id="@+id/image1"
                    android:onClick = "onClickImg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentLeft="true"
                    android:padding="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/lego" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_below="@id/LinLayLego"
            android:layout_alignParentLeft="true"
            android:textColor="#ff0000"
            android:textSize="14sp"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:id="@+id/LinLay_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_below="@+id/tv1"
            android:layout_marginTop="25dp" >



            <Button
                android:id="@+id/btnSlide_1"
                android:onClick="onClickSlide_1"
                android:layout_weight="0.33"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Slide 1"
                android:textStyle="bold"
                android:textColor = "#e5ff00"
                android:background="#000000" />

            <Button
                android:id="@+id/btnSlide_2"
                android:onClick="onClickSlide_2"
                android:layout_weight="0.33"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Slide 2"
                android:textStyle="bold"
                android:textColor = "#e5ff00"
                android:background="#000000" />

            <Button
                android:id="@+id/btnSlide_3"
                android:onClick="onClickSlide_3"
                android:layout_weight="0.33"
                android:layout_width= "0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Slide 3"
                android:textStyle="bold"
                android:textColor = "#e5ff00"
                android:background="#000000" />

        </LinearLayout>




    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>